{
  // Comments are allowed here!
  "testBundle": "./lib/cjs/test/webpack/bundled-tests.js",
  // "instrumentedTestBundle": "./lib/cjs/test/webpack/bundled-tests.instrumented.js",
  "ports": {
    "frontend": 3040,
    "frontendDebugging": 9223
  },
  "mochaOptions": {
    "timeout": 2000, // These are unit tests; they should be quick.
    "hooks": "@itwin/build-tools/mocha-hooks",
    "reporter": "@itwin/build-tools/mocha-reporter",
    "reporterOptions": {
      "mochaFile": "lib/test/junit_results.xml"
    }
  },
  "chromeOptions": {
    "publicDirs": [
      "src/public",
    ],
    "args": [
      "--disable-web-security",
      "--no-sandbox"
    ]
  }
}