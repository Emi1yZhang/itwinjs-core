{
  "$id": "app1 schema",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "app1 settings",
  "description": "the settings for test application 1",
  "type": "object",
  "groupName": "app1",
  "order": 7,
  "properties": {
    "app1/list/multiSelectModifier": {
      "type": "string",
      "enum": [
        "ctrlCmd",
        "alt"
      ],
      "enumDescriptions": [
        "ctrl key.",
        "alt key."
      ],
      "default": "ctrlCmd",
      "description": "multiSelectModifier"
    },
    "myApp/categories": {
      "type": "array",
      "description": "possible categories",
      "items": {
        "type": "string",
        "description": "category names"
      }
    },
    "app1/list/openMode": {
      "type": "string",
      "enum": [
        "singleClick",
        "doubleClick"
      ],
      "default": "singleClick",
      "description": "openModeModifier"
    },
    "app1/list/horizontalScrolling": {
      "type": "boolean",
      "default": false,
      "description": "horizontalScrolling setting"
    },
    "app1/tree/indent": {
      "type": "number",
      "default": 8,
      "minimum": 0,
      "maximum": 40,
      "description": "tree indent setting"
    },
    "app1/tree/blah": {
      "type": "boolean",
      "default": true,
      "description": "the setting for blah"
    },
    "workspace/accounts": {
      "type": "array",
      "description": "array of workspace container accounts",
      "items": {
        "type": "object",
        "required": [
          "name",
          "accessName",
          "storageType"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "the name of the workspace container account"
          },
          "accessName": {
            "type": "string",
            "description": "the accessName for workspace container account"
          },
          "storageType": {
            "type": "string",
            "description": "the storageType of the workspace container account"
          }
        }
      }
    },
    "workspace/containers": {
      "type": "array",
      "description": "array of workspace containers",
      "items": {
        "type": "object",
        "required": [
          "name",
          "containerId"
        ],
        "properties": {
          "containerId": {
            "type": "string",
            "description": "the id of the workspace container"
          },
          "name": {
            "type": "string",
            "description": "the name of the workspace container"
          },
          "accountName": {
            "type": "string",
            "description": "the account for a cloud workspace container"
          }
        }
      }
    },
    "workspace/databases": {
      "type": "array",
      "description": "array of workspace databases",
      "items": {
        "type": "object",
        "required": [
          "name",
          "dbName",
          "containerName"
        ],
        "name": {
          "type": "string",
          "description": "the name of the workspace database"
        },
        "properties": {
          "dbName": {
            "type": "string",
            "description": "the name of the workspace database"
          },
          "containerName": {
            "type": "string",
            "description": "the workspace container name"
          },
          "version": {
            "type": "string",
            "description": "the (semver) range of acceptable versions"
          },
          "includePrerelease": {
            "type": "boolean",
            "description": "include prerelease version as acceptable versions"
          }
        }
      }
    },
    "fontList": {
      "type": "array",
      "description": "array of fonts to load",
      "items": {
        "type": "object",
        "required": [
          "container",
          "fontName"
        ],
        "properties": {
          "container": {
            "type": "string",
            "description": "resource container name"
          },
          "fontName": {
            "type": "string",
            "description": "name of font within resource container"
          }
        }
      }
    }
  }
}