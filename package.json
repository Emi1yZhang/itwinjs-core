{
  "name": "itwinjs-core",
  "//private": "NOTE: This 'root' package is private. It is never published",
  "private": true,
  "description": "iTwin.js core monorepo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/itwinjs-core"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "lage build",
    "build:clean": "lage build --no-cache",
    "build:profile": "lage build --no-cache --profile",
    "clean": "lage clean --no-cache",
    "purge": "rimraf node_modules **/node_modules",
    "change": "beachball --type prerelease --no-commit --dependent-change-type prerelease"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "digital-twin",
    "iTwin"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "//dependencies": "NOTE: dependencies will be empty here and instead specified in each package.",
  "devDependencies": {
    "beachball": "^2.30.1",
    "lage": "^1.8.0",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "syncpack": "^8.2.4"
  },
  "syncpack": {
    "versionGroups": [
      { "dependencies": ["*"], "packages": ["@itwin/eslint-plugin"] }
    ],
    "workspace": false,
    "peer": false
  }
}